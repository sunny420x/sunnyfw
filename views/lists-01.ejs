<!doctype html>
<html lang="en">
  <head>
    <title><%=nav%></title>
    <%- include('include/head-scripts')%>
  </head>

  <body>
    <%-include('include/header')%>

      <div class="p-5 bg-light">
        <div class="container">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" style="text-transform: capitalize;"><%=nav%></li>
            </ol>
          </nav>
          <div class="row">
            <%
            result.forEach((row) => {
            %>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="<%=row.img%>" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-text"><%=row.title%></h5>
                  <p class="card-text"><%=row.content.replace(/(<([^>]+)>)/ig,'').substring(0, 180)%>...</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-primary" onclick="window.location.href='/<%=nav%>/<%=row.id%>'">View</button>
                    </div>
                    <small class="text-muted"><%=row.time%></small>
                  </div>
                </div>
              </div>
            </div>
            <%
            })
            %>
          </div>
        </div>

        <%-include('include/footer')%>

    <%- include('include/body-scripts')%>
  </body>
</html>

