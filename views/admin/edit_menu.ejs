<html>
    <head>
        <title>Editing -> <%=result[0].id%> -> <%=nav%> -> Admin | SunnyFW</title>
        <%-include('include/head-scripts')%>    
    </head>
    
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 p-0">
                    <%-include('include/sidebar') %>
                </div>
                <div class="col-md-10 pt-2">
                    <div class="card">
                        <div class="card-header">Editing -> <%=result[0].id%></div>
                        <div class="card-body">
                            <form action="" method="POST">
                                <div class="form-group mb-2">
                                    <label>Name (max: 100)</label>
                                    <input name="name" type="text" class="form-control mt-2" placeholder="name" maxlength="100" value="<%=result[0].name%>">
                                </div>
                                <div class="form-group mb-2">
                                    <label>URL (max: 500)</label>
                                    <input name="url" type="text" class="form-control mt-2" placeholder="URL" maxlength="500" value="<%=result[0].url%>">
                                </div>
                                <button type="submit" class="btn btn-primary mt-2">[!] Update Menu</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
            
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
