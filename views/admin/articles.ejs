<html>
    <head>
        <title><%=nav%> -> Admin | SunnyFW</title>
        <%-include('include/head-scripts')%>    
    </head>
    
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 p-0">
                    <%-include('include/sidebar') %>
                </div>
                <div class="col-md-10 pt-2">
                    <div class="card">
                        <div class="card-header" style="text-transform: capitalize;">
                            <%=nav%> Systems
                        </div>
                        <div class="card-body">
                            <div class="mt-2">
                                <a class="btn-primary p-2 rounded text-decoration-none" href="/admin/<%=nav%>/add"><i class="fa fa-plus-square" aria-hidden="true"></i> Add New Row</a>
                            </div>
                                
                            <div class="row mt-4">
                                <%
                                result.forEach((row) => {
                                %>
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <img src="<%=row.img%>" alt="" style="width: 100%;">
                                                </div>
                                                <div class="col-md-9"> 
                                                    <h5 class="card-title"><a href="/admin/<%=nav%>/edit/<%=row.id%>"><%=row.title%></a></h5>
                                                    <p class="card-text"><%=row.content.replace(/(<([^>]+)>)/ig,'').substring(0, 180)%>...</p>
                                                    <p class="card-text"><small class="text-muted"><%=row.time%></small></p>
                                                </div>
                                            </div>
                                    
                                        </div>
                                        <div class="card-footer py-4">
                                            <a href="/admin/<%=nav%>/edit/<%=row.id%>" class="btn-primary p-2 rounded text-decoration-none"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
                                            <a onclick="                                        
                                            Swal.fire({
                                                title: 'Are you sure?',
                                                text: 'You wont be able to revert this!',
                                                icon: 'warning',
                                                showCancelButton: true,
                                                confirmButtonColor: '#3085d6',
                                                cancelButtonColor: '#d33',
                                                confirmButtonText: 'Yes, delete it!'
                                                  }).then((result) => {
                                                  if (result.isConfirmed) {
                                                      window.location = '/admin/<%=nav%>/delete/<%=row.id%>';
                                                  }
                                                })
                                            " class="btn-danger p-2 rounded text-decoration-none"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
                                        </div>
                                      </div>
                                </div>
                                <%
                                })
                                %>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            
            
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
