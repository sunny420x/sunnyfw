<html>
    <head>
        <title>Edit <%=nav%> -> Admin | SunnyFW</title>
        <%-include('include/head-scripts')%>    
    </head>
    
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 p-0">
                    <%-include('include/sidebar') %>
                </div>
                <div class="col-md-10 pt-2">
                    <div class="card">
                        <div class="card-header"></div>
                        <div class="card-body">
                            <form action="" method="POST">
                                <div class="form-group mb-2">
                                    <label>Name (max: 100)</label>
                                    <input name="name" type="text" class="form-control mt-2" placeholder="name" maxlength="100" value="<%=result[0].name%>">
                                </div>
                                <div class="form-group mb-2">
                                    <label>Post-by (max: 50)</label>
                                    <input name="addby" type="text" class="form-control mt-2" placeholder="addby" maxlength="50" value="<%=result[0].addby%>">
                                </div>
                                <div class="form-group mb-2">
                                    <label>Content (max: 20,000)</label>
                                    <textarea name="content" class="form-control mt-2" rows="5" maxlength="20000"><%=result[0].content%></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary mt-2">[+] Update Web Content</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
            
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
