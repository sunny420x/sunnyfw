<html>
    <head>
        <title>Editing -> <%=result[0].id%> -> <%=nav%> -> Admin | SunnyFW</title>
        <%-include('include/head-scripts')%>    
    </head>
    
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 p-0">
                    <%-include('include/sidebar') %>
                </div>
                <div class="col-md-10 pt-2">
                    <div class="card">
                        <div class="card-header">Editing -> <%=result[0].id%></div>
                        <div class="card-body">
                            <form action="" method="POST">
                                <div class="form-group mb-2">
                                    <label>Title (max: 100)</label>
                                    <input name="title" type="text" class="form-control mt-2" placeholder="title" maxlength="100" value="<%=result[0].title%>">
                                </div>
                                <div class="form-group mb-2">
                                    <label>img (max: 200)</label>
                                    <input name="img" type="text" class="form-control mt-2" placeholder="img" maxlength="200" value="<%=result[0].img%>">
                                </div>
                                <div class="form-group mb-2">
                                    <label>Time (max: 50)</label>
                                    <input name="time" type="text" class="form-control mt-2" placeholder="Time" maxlength="50" value="<%=result[0].time%>">
                                </div>
                                <div class="form-group mb-2">
                                    <label>Postby (max: 50)</label>
                                    <input name="postby" type="text" class="form-control mt-2" placeholder="postby" maxlength="100" value="<%=result[0].postby%>">
                                </div>
                                <div class="form-group mb-2">
                                    <label>Content (max: 20,000)</label>
                                    <textarea name="content" class="form-control mt-2" rows="20" maxlength="20000"><%=result[0].content%></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary mt-2">[!] Update article</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
            
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
