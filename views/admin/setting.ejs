<html>
    <head>
        <title><%=nav%> -> Admin | SunnyFW</title>
        <%-include('include/head-scripts')%>    
    </head>
    
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 p-0">
                    <%-include('include/sidebar') %>
                </div>
                <div class="col-md-10 pt-2">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-list" aria-hidden="true"></i> Variables Settings
                        </div>
                        <div class="card-body">
                            <div class="mt-2">
                                <a class="btn-primary p-2 rounded text-decoration-none" href="/admin/setting/add"><i class="fa fa-plus-square" aria-hidden="true"></i> Add new variables</a>
                            </div>
                                
                            <div class="row mt-4">
                                <table class="table">
                                    <thead class="thead-dark">
                                      <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Command</th>
                                        <th scope="col">Value</th>
                                        <th scope="col">Add by</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                    <%
                                    result.forEach((row) => {
                                    %>
                                    <tr>
                                        <th scope="row"><%=row.id%></th>
                                        <td><%=row.command%></td>
                                        <td><%=row.value%></td>
                                        <td><%=row.addby%></td>
                                    </tr>
                                    <%
                                    })
                                    %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            
            
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
